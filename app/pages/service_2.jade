extends extends/layout.jade
include includes/mixins.jade

block html
	- var pageclass = 'p-service service-2'

block head
	- var pageTitle = 'Пожарные системы «под ключ»'

block content
	+menu()

	#scrn-1
		
		.banner_back
			.banner_fore
				.setw
					#banner-inside_text
						h1 Пожарные системы «под ключ»

					.t-center
						a.btn-primary.fancybox(href="#fbx-appl") Сделать запрос на КП

			#banner_arrow
				a(href="#")
					span.sprite-arrow
	

	main(role="main").marginBotFix
		+OldBrowserMsg()

		#main__container

			.section.setw
				h3 Направления нашей деятельности по организации противопожарной безопасности:

				.FontIconsTexts.grid
					.grid-3
						.FontIconsTexts-title
							.i-firealarm
							p
								strong Пожарная сигнализация
						.FontIconsTexts-text
					
					.grid-3
						.FontIconsTexts-title
							.i-horn
							p
								strong Система речевого оповещения людей о пожаре
						.FontIconsTexts-text
					
					.grid-3
						.FontIconsTexts-title
							.i-firefight
							p
								strong Системы пожаротушения
						.FontIconsTexts-text
							p В том числе водяная, газовая, порошковая системы пожаротушения; насосные станции и узлы управления системами пожаротушения.
					
					.grid-3
						.FontIconsTexts-title
							.i-hood
							p
								strong Системы газо- и дымоудаления
						.FontIconsTexts-text

					.grid-3
						.FontIconsTexts-title
							.i-firewater
							p
								strong Автоматическое пожаротушение
						.FontIconsTexts-text
							p А именно автоматизация противопожарного водопровода


			.section.section-gray
				.setw
					h3 Выполняем комплексные и разовые работы по организации противопожарных систем:

					ul
						li Разработка технического задания на проектирование
						li Проектирование
						li Монтаж
						li Пусконаладочные работы
						li Взаимная увязка работы инженерного оборудования
						li Подготовка исполнительной документации
						li Сдача объекта в эксплуатацию

					.t-center
						a.btn-primary.fancybox(href="#fbx-appl") Получить бесплатную консультацию

			+howItWorks()
			